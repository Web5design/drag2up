{
  "name": "drag2up",
  "version": "2.0.0",
  "description": "Drag files to text boxes on any site to upload and share.",
	"background_page": "background.html",
  "permissions": [
    "*://*/",
    "tabs",
    "contextMenus",
    "unlimitedStorage",
    "notifications"
  ],
  "page_action": {
    "default_icon": "icon/22.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dragupload.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "64": "icon/64.png",
    "128": "icon/128.png",
    "512": "icon/512.png"
  }
}
